<%- include('partials/head.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <hr>
            <form method="POST" action="/responder">
                <label for="corpo">Resposta:</label>
                <textarea name="corpo" id="corpo" placeholder="Digite sua resposta" class="form-control mb-3"></textarea>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-primary">Responder</button>
            </form>
            <hr>
            <h3>Respostas</h3>
            <% respostas.forEach(resposta => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <%= resposta.corpo %>
                    </div>
                </div>
            <% }) %>
        </div>  
    <%- include('partials/footer.ejs') %>
</body>   
</html>